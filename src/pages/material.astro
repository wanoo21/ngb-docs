---
import {Image} from "astro:assets";
import Mat from "@/static/mat.png";

import DefinedThemes from "../components/DefinedThemes.astro";
import CustomThemes from "../components/CustomThemes.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Features from "../components/Features.astro";
import CustomWork from "../components/CustomWork.astro";
import MainLayout from "../layouts/MainLayout.astro";
import CustomHero from "../components/CustomHero.astro";
import Link from "../components/Link.astro";
---

<MainLayout
        title="Angular Material Email Template Builder"
        description="A WYSIWYG email template builder based on Angular and Material. Create responsive email templates with a drag-and-drop interface."
>
    <CustomHero theme="material">
        <Fragment slot="header">
            Angular Material Email <span class="text-primary">Template Editor</span>
        </Fragment>
        <Fragment slot="summary">
            A WYSIWYG email template builder based on <span class="text-primary">Angular and Material.</span> <br>
            Ship your startup, SaaS, or personal project with a responsive email template builder. DnD interface, export HTML, and more.
        </Fragment>
        <Fragment slot="actions">
            <button class="btn btn-primary tooltip" data-tip="Coming Soon">
                Buy Now
            </button>
            <button class="btn btn-ghost tooltip" data-tip="Coming Soon">
                Try Demo
            </button>
        </Fragment>
        <Image src={Mat} widths={[1000, 800, 600]} class="w-1/2 hidden lg:inline rounded-lg shadow-md"
               alt="Angular Material Email Editor" slot="image"/>
    </CustomHero>
    <Features class="bg-base-100"/>
    <DefinedThemes class="bg-base-200"/>
    <HowItWorks class="bg-base-100"/>
    <CustomThemes class="bg-base-200"/>
    <!--<Stats/>-->
    <CustomWork class="bg-base-100"/>
</MainLayout>
