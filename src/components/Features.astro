---
import {FEATURES} from '../consts';
---

<section class="bg-white dark:bg-gray-900 py-24 sm:py-32" id="features">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
            <h2 class="text-base font-semibold leading-7 text-red-600 capitalize">
                Revolutionize Your Email Designs with Powerful Features
            </h2>
            <p class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl capitalize">
                Without the hassle
            </p>
            <p class="mt-6 text-lg leading-8">
                Unlock the Full Potential of Your Email Templates with NGB Email Builder's Versatile Capabilities
            </p>
        </div>
        <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
            <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
                {FEATURES.map(({name, description, icon}) => (
                        <div class="flex flex-col">
                            <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 light:text-gray-900 dark:opacity-80">
                                <Fragment set:html={icon}></Fragment>
                                {name}
                            </dt>
                            <dd class="mt-4 flex flex-auto flex-col text-base leading-7 light:text-gray-600 dark:opacity-80">
                                <p class="flex-auto">{description}</p>
                            </dd>
                        </div>
                ))}
            </dl>
        </div>
    </div>
</section>
